	Иначе
		Объект.РегистрацияВНалоговомОргане = "";
		Объект.Префикс                     = "";
		Объект.КодПоОКПО                   = "";
		Объект.КодОрганаФСГС               = "";
	КонецЕсли;
	Если Объект.ОбособленноеПодразделение Тогда
		РегистрацияВНалоговомОрганеПриИзмененииСервер();
		УправлениеФормой(ЭтаФорма);
	КонецЕсли;
	
	УстановитьДоступность(ЭтаФорма);

